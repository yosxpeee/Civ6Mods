		<Row UnitType="UNIT_YAMABUSHI" AiType="UNITAI_EXPLORE"/>		<!-- 探索する -->
		<Row UnitType="UNIT_YAMABUSHI" AiType="UNITTYPE_MELEE"/>		<!-- 近接ユニット -->
		<Row UnitType="UNIT_YAMABUSHI" AiType="UNITTYPE_LAND_COMBAT"/>	<!-- 陸上タイプ -->
		
		<Row UnitType="UNIT_ZUNKO_HORSE_ARCHER" AiType="UNITAI_COMBAT"/>       <!-- 戦闘ユニット -->
