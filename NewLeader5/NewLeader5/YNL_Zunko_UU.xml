		<Row UnitType="UNIT_ZUNKO_HORSE_ARCHER" AiType="UNITTYPE_LAND_COMBAT"/><!-- 陸上タイプ -->
	</UnitAiInfos>
	<!-- ユニークユニットの置き換え先 -->
	<UnitReplaces>
		<Row CivUniqueUnitType="UNIT_FIGHTING_MONK" ReplacesUnitType="UNIT_MUSKETMAN"/>
	</UnitReplaces>
	<!-- TypeとTagの紐付け -->
	<TypeTags>
		<!-- 山伏 -->
		<!-- ウィングフッサーの特性をそのまま使用
			 (ウイングフッサーはポーランドDLCのユニットだが、特性の設定だけはバニラに存在している) -->
		<Row Type="UNIT_YAMABUSHI" Tag="CLASS_WARRIOR_MONK"/>
		<Row Type="UNIT_YAMABUSHI" Tag="CLASS_PUSHBACK"/>
		<!-- 僧兵 -->
		<!-- コンキスタドールと侍の特性をそのまま使用 -->
		<Row Type="UNIT_FIGHTING_MONK" Tag="CLASS_MELEE"/>
		<Row Type="UNIT_FIGHTING_MONK" Tag="CLASS_CONQUISTADOR"/>
		<Row Type="UNIT_FIGHTING_MONK" Tag="CLASS_SAMURAI"/>
		<!-- ずんだ弓騎兵 -->
		<Row Type="UNIT_ZUNKO_HORSE_ARCHER" Tag="CLASS_RANGED_CAVALRY"/>
	</TypeTags>
	<Units>
		<!--
		    BaseMoves             : 移動力
			Cost                  : コスト
			BaseSightRange        : 視界
			ZoneOfControl         : ZOC発生の有無
			Domain                : 所属ドメイン
				DOMAIN_LAND = 陸上
				DOMAIN_SEA  = 洋上
			CostProgressionModel  : コストの上昇モデル？
			CostProgressionParam1 : コストの上昇値？
			CanCapture            : 捕獲できるか(trueで可能)
			SpreadCharge          : 布教回数
			MustPurchase          : TRUEにするとコストを支払わなければ作成できないユニットになる
			TraitType             : 紐付く特性(ユニークユニットの場合必須)
			PurchaseYield         : ユニット作成にかかるもの
			PromotionClass        : 昇進タイプ
			Maintenance           : 維持費
			Combat                : 近接戦闘力
			RangedCombat          : 遠隔攻撃力
			Range                 : 遠隔攻撃の射程
			MandatoryObsoleteTech : 陳腐化する条件になるテクノロジー
			PrereqTech            : 作成に必要なテクノロジー
			PrereqCivic           : 作成に必要な社会制度
			StrategicResource     : 必要な戦略資源
		-->
		<Row UnitType="UNIT_YAMABUSHI"          BaseMoves="3" Cost="120"                                BaseSightRange="2" ZoneOfControl="true"  Domain="DOMAIN_LAND" FormationClass="FORMATION_CLASS_LAND_COMBAT"                                   Name="LOC_UNIT_YAMABUSHI_NAME"          Description="LOC_UNIT_YAMABUSHI_DESCRIPTION"          PurchaseYield="YIELD_FAITH" PromotionClass="PROMOTION_CLASS_YAMABUSHI" Maintenance="2" Combat="35"                                                  TraitType="TRAIT_LEADER_UNIT_YAMABUSHI"          PrereqCivic="CIVIC_THEOLOGY" MustPurchase="TRUE" />
		<Row UnitType="UNIT_FIGHTING_MONK"      BaseMoves="2" Cost="275" AdvisorType="ADVISOR_CONQUEST" BaseSightRange="2" ZoneOfControl="true"  Domain="DOMAIN_LAND" FormationClass="FORMATION_CLASS_LAND_COMBAT" StrategicResource="RESOURCE_IRON" Name="LOC_UNIT_FIGHTING_MONK_NAME"      Description="LOC_UNIT_FIGHTING_MONK_DESCRIPTION"      PurchaseYield="YIELD_GOLD"  PromotionClass="PROMOTION_CLASS_MELEE"     Maintenance="4" Combat="58" MandatoryObsoleteTech="TECH_ADVANCED_BALLISTICS" TraitType="TRAIT_LEADER_UNIT_FIGHTING_MONK"      PrereqCivic="CIVIC_REFORMED_CHURCH" />
		<Row UnitType="UNIT_ZUNKO_HORSE_ARCHER" BaseMoves="4" Cost="100" AdvisorType="ADVISOR_CONQUEST" BaseSightRange="2" ZoneOfControl="false" Domain="DOMAIN_LAND" FormationClass="FORMATION_CLASS_LAND_COMBAT"                                   Name="LOC_UNIT_ZUNKO_HORSE_ARCHER_NAME" Description="LOC_UNIT_ZUNKO_HORSE_ARCHER_DESCRIPTION" PurchaseYield="YIELD_GOLD"  PromotionClass="PROMOTION_CLASS_RANGED"    Maintenance="2" Combat="22" MandatoryObsoleteTech="TECH_BALLISTICS"          TraitType="TRAIT_LEADER_UNIT_ZUNDA_HORSE_ARCHER" PrereqTech="TECH_HORSEBACK_RIDING" RangedCombat="28" Range="2" />
	</Units>
	<!-- ユニットのアップグレード先 -->
	<UnitUpgrades>
		<Row Unit="UNIT_FIGHTING_MONK"      UpgradeUnit="UNIT_LINE_INFANTRY"/>
		<Row Unit="UNIT_ZUNKO_HORSE_ARCHER" UpgradeUnit="UNIT_CROSSBOWMAN"/>
